#include <stdio.h>

int main() {
    int n, i, j, c;
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        c = 1;

        for(j = 0; j < n - i; j++) printf(" ");

        for(j = 0; j <= i; j++) {
            printf("%d ", c);
            c = c * (i - j) / (j + 1);
        }

        printf("\n");
    }

    return 0;
}

/*
Example Output (n = 5):
     1
    1 1
   1 2 1
  1 3 3 1
 1 4 6 4 1
*/
